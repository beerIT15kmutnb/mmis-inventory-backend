include css.pug
doctype html
html
  head
    meta(charset="utf-8")
    title report
  body
    button.btn.btn-sm.btn-success(onclick='window.print()') Print
    table.table
      thead
        tr 
          td.center.bold(colspan='9') #{hospitalName} 
        tr 
          td.center.bold(colspan='9') ใบจัดเวชภัณฑ์ตามใบเบิก
        tr 
          td.center(colspan='9') วันที่เบิก #{check_date}
        tr 
          td.left(colspan='9') ใบเบิกเลขที่ #{requisition_id}
        tr 
          td.left(colspan='9') วันที่อนุมัติเบิก #{requisition_date}
        tr 
          td.left(colspan='9') ณ วันที่ #{today}
      tbody
      for a in list_requis
        tr.dash-top
          td(style='border:none;') รหัสยา 
          td(colspan='8') : #{a.product_id}
        tr
          td ชื่อสามัญ
          td(colspan='6') : #{a.generic_name}
          td จำนวนขอเบิก
          td #{a.requisition_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
        tr
          td หน่วยบรรจุ
          td : #{a.large_unit}
          td
          td
          td(align="right") รูปแบบ
          td(colspan='2')  : #{a.small_unit}
          td จำนวนเบิก
          td #{a.confirm_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
        tr
          td
          td.left(colspan='3') ชื่อทางการค้า 
          td จำนวนเบิก
          td วันหมดอายุ
          td ที่เก็บ
          td เลขทะเบียน
          td คงเหลือ
        tr.dash-bottom
          td(colspan='4').left #{a.product_name}
          td #{a.requisition_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
          td #{a.expired_date}
          td #{a.warehouse_name}
          td 
          td #{a.total} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
include css.pug
doctype html
html
  head
    meta(charset="utf-8")
    title report
  body
    button.btn.btn-sm.btn-success(onclick='window.print()') Print
    - var ss=0
      for i in list_requis
        .page
        table.table
          thead
            tr 
              td.center.bold(colspan='9') #{hospitalName} 
            tr 
              td.center.bold(colspan='9') ใบจัดเวชภัณฑ์ตามใบเบิก
            tr 
              td.center(colspan='9') วันที่เบิก #{i[0].requisition_date}
            tr 
              td.left(colspan='9') ใบเบิกเลขที่ #{i[0].requisition_code}
            tr 
              td.left(colspan='9') วันที่อนุมัติเบิก #{i[0].confirm_date}
            tr 
              td.left(colspan='9') หน่วยงานที่เบิก #{i[0].warehouse_name}
            tr 
              td.left(colspan='9') ณ วันที่ #{today[ss]}
          tbody
          for a in i
            tr.dash-top
              td(style='border:none;') รหัสยา 
              td(colspan='8') : #{a.product_id}
            tr
              td ชื่อสามัญ
              td(colspan='6') : #{a.generic_name}
              td จำนวนขอเบิก
              td #{a.requisition_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
            tr
              td หน่วยบรรจุ
              td : #{a.large_unit}
              td
              td
              td(align="right") รูปแบบ
              td(colspan='2')  : #{a.small_unit}
              td จำนวนเบิก
              td #{a.confirm_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
            tr
              td
              td.left(colspan='3') ชื่อทางการค้า 
              td จำนวนเบิก
              td วันหมดอายุ
              td ที่เก็บ
              td เลขทะเบียน
              td คงเหลือ
            tr.dash-bottom
              td(colspan='4').left #{a.product_name}
              td #{a.confirm_qty} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
              td #{a.expired_date}
              td #{a.withdraw_warehouse_name}
              td 
              td #{a.total} #{a.large_unit} (#{a.unit_qty} #{a.small_unit})
        - ++ss
        .pagebreak

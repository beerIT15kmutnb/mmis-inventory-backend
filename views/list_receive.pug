include css.pug
doctype html
html
  head
    meta(charset="utf-8")
    title report
  body
    button.btn.btn-sm.btn-success(onclick='window.print()') Print
    table.table
      thead
        tr 
          td.center.bold(colspan='8') #{hospitalName} 
        tr 
          td.center.bold(colspan='8') ใบนำส่งเวชภัณฑ์เข้าคลัง
        tr 
          td.left(colspan='8') #{printDate}
      tbody
      - var _receive_id
      - var _generic_id
      for item in array2
        for a in item
          if(a.receive_id!='' && a.is_free=='N')
            if(_receive_id==a.receive_id && _generic_id==a.generic_id)
              tr
                td #{a.generic_id}
                td #{a.generic_name}
                td #{a.location_name}
                td #{a.receive_qty}x#{a.small_qty}
                td #{a.expired_date}
                td #{a.lot_no}
                td #{a.labeler_name_po_m}
                td
            else
              tr.dash-top
                td(colspan='2') เลขที่รับ  : #{a.receive_code}
                td(colspan='3') วันที่รับ : #{a.receive_date}
                td(colspan='3') เลขที่ใบส่งของ : #{a.delivery_code}
              tr
                td(colspan='2') รหัสผู้จำหน่าย : #{a.vendor_labeler_id}
                td(colspan='3') ผู้จำหน่าย : #{a.labeler_name_po}
                td(colspan='3') ราคา #{a.unit_price}/#{a.small_qty} #{a.small_unit}
              tr
                td รหัสเวชภัณฑ์
                td รายการเวชภัณฑ์
                td ที่เก็บ
                td จำนวนรับ
                td วันหมดอายุ
                td Lot No.
                td ผู้ผลิต
                td เลขทะเบียน
              tr
                td #{a.generic_id}
                td #{a.generic_name}
                td #{a.location_name}
                td #{a.receive_qty}x#{a.small_qty}
                td #{a.expired_date}
                td #{a.lot_no}
                td #{a.labeler_name_po_m}
                td
          - _receive_id=a.receive_id
          - _generic_id=a.generic_id
          if(a.receive_id!='' && a.is_free=='Y')
            tr
              td #{a.generic_id}
              td #{a.generic_name} (ของแถม)
              td #{a.location_name}
              td #{a.receive_qty}x#{a.small_qty}
              td #{a.expired_date}
              td #{a.lot_no}
              td #{a.labeler_name_po_m}
              td 
          if(a.receive_id=='')
            tr
              td คงคลัง
              td #{a.generic_name}
              td #{a.location_name}
              td #{a.receive_qty}x#{a.small_qty}
              td #{a.expired_date}
              td #{a.lot_no}
              td #{a.labeler_name_po_m}
              td 
      tfoot 
        tr.tbfooter
          td(colspan='8')
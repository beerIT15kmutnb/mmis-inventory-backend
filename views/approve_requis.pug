          td #{a.dosage_name}
          td #{a.small_unit}
          td #{a.lot_no}
          td.right #{a.requisition_qty} 
          td.right #{a.requisition_qty} 
          td.right #{a.cost}
          td.right #{a.expired_date}
          td.right #{a.total_cost}

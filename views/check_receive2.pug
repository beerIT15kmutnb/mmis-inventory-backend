                tr
                  td
                  td.center (#{v.chief.fullname})
                  td
                tr
                  td
                  td.center #{v.chief.position_name}
                  td
                tr
                  td
                  td.center #{v.chief.position}
                  td
          td(style="width:50%")
            table.table
              tr
                td.center(colspan=3) 
